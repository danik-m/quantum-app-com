<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quantum Simulator</title>
    <style>
        body { font-family: sans-serif; padding: 20px; text-align: center; background-color: #f4f4f9; }
        .container { background: white; max-width: 800px; margin: 0 auto; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        input { padding: 5px; width: 60px; margin: 5px; }
        button { padding: 10px 20px; background: #28a745; color: white; border: none; cursor: pointer; border-radius: 5px; font-size: 16px; }
        button:hover { background: #218838; }
        img { max-width: 100%; margin-top: 20px; border: 1px solid #ddd; border-radius: 5px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Квантовый Симулятор</h1>
        <div>
            <label>Энергия (E): <input type="number" id="energy" value="50"></label>
            <label>Ширина: <input type="number" id="width" value="2.0"></label>
            <button onclick="run()">Запуск</button>
        </div>
        <div id="status" style="margin-top: 10px; color: gray;"></div>
        <img id="result" src="" style="display:none;">
    </div>

    <script>
        async function run() {
            const E = document.getElementById('energy').value;
            const W = document.getElementById('width').value;
            const status = document.getElementById('status');
            const img = document.getElementById('result');
            
            status.innerText = "Вычисление...";
            img.style.display = 'none';

            try {
                // Запрос к нашему API
                const response = await fetch(`/api/simulate?energy=${E}&width=${W}`);
                
                if (!response.ok) {
                    throw new Error(`Ошибка сети: ${response.status}`);
                }

                const data = await response.json();
                img.src = "data:image/png;base64," + data.image;
                img.style.display = 'block';
                status.innerText = "Готово!";
            } catch (e) {
                status.innerText = "Ошибка: " + e.message;
            }
        }
    </script>
</body>
</html>

